<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/news_id"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:textSize="20sp"
        android:paddingTop="30dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="20dp"
        android:background="@color/news_id_color"/>

    <TextView
        android:id="@+id/news_title"
        android:maxLength="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/news_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/news_url"
        android:maxLength="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/news_title"
        app:layout_constraintStart_toEndOf="@+id/news_id"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp" />


    <TextView
        android:id="@+id/time_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/news_id"
        app:layout_constraintTop_toBottomOf="@id/news_url"
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/news_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/time_published"
        app:layout_constraintTop_toBottomOf="@id/news_url"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>